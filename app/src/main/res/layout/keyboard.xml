<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/table_num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="#c8cbcc"
        android:orientation="horizontal">
        <LinearLayout style="@style/layout_input_amount_style">
            <Button
                android:id="@+id/btn_1"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="1" />
            <Button
                android:id="@+id/btn_2"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="4" />
            <Button
                android:id="@+id/btn_3"
                style="@style/btn_input_amount_style"
                android:text="7" />
        </LinearLayout>


        <LinearLayout style="@style/layout_input_amount_style">

            <Button
                android:id="@+id/btn_4"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="2" />

            <Button
                android:id="@+id/btn_5"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/btn_input_amount_style"
                android:text="8" />
        </LinearLayout>

        <LinearLayout style="@style/layout_input_amount_style">
            <Button
                android:id="@+id/btn_7"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="3" />
            <Button
                android:id="@+id/btn_8"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="6" />
            <Button
                android:id="@+id/btn_9"
                style="@style/btn_input_amount_style"
                android:text="9" />
        </LinearLayout>

        <LinearLayout style="@style/layout_input_amount_style">
            <ImageButton
                android:id="@+id/btn_d"
                style="@style/btn_input_amount_style"
                android:src="@drawable/search_backspace" />
            <!--<Button
                android:id="@+id/btn_t"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="."
                tools:ignore="HardcodedText" />-->
            <Button
                android:id="@+id/btn_0"
                style="@style/btn_input_amount_style"
                android:layout_marginRight="1dp"
                android:text="0"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>